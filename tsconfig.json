{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es5",
		"jsx": "react",
		"module": "commonjs",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": false,
		"noImplicitAny": false,
		"noImplicitReturns": false,
		"removeComments": true,
		"strictNullChecks": false,
		"outDir": "dist",
		"lib": [
			"es6",
			"es7",
			"dom"
		]
	},
  "files": [
    "src/index.ts"
  ],
	"exclude": [
		"dist",
		"node_modules"
	]
}
